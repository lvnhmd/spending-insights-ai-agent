{
  "name": "spending-insights-ai-agent",
  "version": "1.0.0",
  "description": "AI-powered spending insights agent for women and moms to transform financial data into actionable weekly money wins",
  "main": "index.js",
  "workspaces": [
    "app",
    "infra"
  ],
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "test": "jest",
    "install:all": "npm install && npm run install:infra && npm run install:app",
    "install:infra": "cd infra && npm install",
    "install:app": "cd app && npm install",
    "build": "npm run build:infra",
    "build:infra": "cd infra && npm run build",
    "deploy": "make deploy",
    "destroy": "make destroy",
    "seed": "npx ts-node --project scripts/tsconfig.json scripts/seed.ts"
  },
  "keywords": [
    "ai",
    "financial-insights",
    "aws",
    "bedrock",
    "hackathon",
    "spending-analysis"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.450.0",
    "@aws-sdk/lib-dynamodb": "^3.450.0",
    "ts-node": "^10.9.0"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^24.6.0",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.4",
    "typescript": "^5.9.2"
  }
}
